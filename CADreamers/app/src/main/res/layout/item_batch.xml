<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dimen_16dp"
    android:padding="@dimen/_8dp"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginTop="@dimen/dimen_0dp"
    app:cardCornerRadius="@dimen/dimen_8dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_220dp">
<RelativeLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:id="@+id/rlBatch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBatchIcon"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <TextView
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/dimen_8dp"
        android:paddingEnd="@dimen/dimen_8dp"
        android:id="@+id/tvBatchPackagePrice"
        android:textColor="@color/white"
        android:background="@color/transparent_70_black"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_12sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="â‚¹ 18000"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/tvBatchTitle"
        android:textColor="@color/white"
        android:padding="@dimen/dimen_4dp"
        android:background="@color/transparent_70_black"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_10sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Combo Title"/>

    <TextView
        android:id="@+id/tvBatchDesc"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_12sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Desc"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>