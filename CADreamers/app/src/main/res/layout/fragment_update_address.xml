<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.address.add_address.AddAddressFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:layout_margin="@dimen/dimen_16dp"
                app:cardCornerRadius="@dimen/dimen_8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="@dimen/dimen_16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/llProfileShow"
                        android:layout_margin="@dimen/dimen_16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Name"
                            style="@style/tv_profile_tag"/>
                        <EditText
                            android:id="@+id/etAddAddressName"
                            android:text="Name"
                            style="@style/tv_profile"/>
                        <TextView
                            android:text="Mobile Number"
                            style="@style/tv_profile_tag"/>
                        <EditText
                            android:id="@+id/etAddAddressPhone"
                            android:text="Mobile Number"
                            style="@style/tv_profile"/>
                        <TextView
                            android:text="Address"
                            style="@style/tv_profile_tag"/>
                        <EditText
                            android:id="@+id/etAddAddressAddress"
                            android:text="Address"
                            style="@style/tv_profile"/>
                        <TextView
                            android:text="City"
                            style="@style/tv_profile_tag"/>
                        <EditText
                            android:id="@+id/etAddAddressCity"
                            android:text="City"
                            style="@style/tv_profile"/>
                        <TextView
                            android:text="State"
                            style="@style/tv_profile_tag"/>
                        <EditText
                            android:id="@+id/etAddAddressState"
                            android:text="State"
                            style="@style/tv_profile"/>
                        <TextView
                            android:text="Country"
                            style="@style/tv_profile_tag"/>

                        <EditText
                            android:id="@+id/etAddAddressCountry"
                            android:text="Country"
                            style="@style/tv_profile"/>

                        <TextView
                            android:text="Pin Code"
                            style="@style/tv_profile_tag"/>
                        <EditText
                            android:id="@+id/etAddAddressPinCode"
                            android:text="Pin Code"
                            style="@style/tv_profile"/>

                         <TextView
                            android:text="Aadhar Number"
                            style="@style/tv_profile_tag"/>
                        <EditText
                            android:id="@+id/etAddAddressAdhar"
                            android:text="Aadhar Number"
                            style="@style/tv_profile"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:layout_width="@dimen/dimen_150dp"
                            android:id="@+id/btnAddAddressSubmit"
                            android:layout_gravity="center_horizontal"
                            android:text="Submit"
                            style="@style/button_main"/>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>