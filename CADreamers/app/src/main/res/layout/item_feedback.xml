<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dimen_16dp"
    android:padding="@dimen/_8dp"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginTop="@dimen/dimen_0dp"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_margin="@dimen/dimen_4dp"
    android:gravity="center_vertical"
    android:id="@+id/llCart"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCartIcon"
        app:cardCornerRadius="@dimen/dimen_30dp"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp">
        <ImageView
            android:id="@+id/ivFeedbackIcon"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_toEndOf="@+id/cvCartIcon"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvFeedbackTitle"
        android:layout_alignParentBottom="true"
        android:textColor="@color/logo"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_14sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="Prod Title"/>
    <TextView
        android:id="@+id/tvFeedbackDescription"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="@dimen/dimen_12sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:text="Prod Mode"/>

    </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>