        <item name="android:layout_marginBottom">@dimen/dimen_4dp</item>
        <item name="android:background">@drawable/button_round_white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
