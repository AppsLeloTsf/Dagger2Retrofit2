<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/transparent"

    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.cardview.widget.CardView
    android:elevation="@dimen/dimen_16dp"
    app:cardCornerRadius="@dimen/dimen_22dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:padding="@dimen/dimen_16dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Upload the images"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                style="@style/tv_title"
                android:text="Upload Product Image"
                />
            <androidx.cardview.widget.CardView
                style="@style/cv_image">
                <ImageView
                    android:id="@+id/ivProductImage"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                style="@style/tv_title"
                android:text="Upload Your Image"
                />
            <androidx.cardview.widget.CardView
                style="@style/cv_image">
                <ImageView
                    android:id="@+id/ivSelf"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_user"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/tv_title"
            android:text="Upload Adhar Front Image"
            />
        <androidx.cardview.widget.CardView
            style="@style/cv_image">
            <ImageView
                android:id="@+id/ivAdharFront"
                android:scaleType="fitXY"
                android:src="@drawable/ic_adhar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/tv_title"
            android:text="Upload Adhar Back Image"
            />
        <androidx.cardview.widget.CardView
            style="@style/cv_image"
            >
            <ImageView

                android:id="@+id/ivAdharBack"
                android:src="@drawable/ic_adhar"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitDialog"
            style="@style/button_main"
            android:text="Submit" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelDialog"
            style="@style/button_white"
            android:text="Cancel"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>