<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activity.ContactActivity">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/WHITE"
        android:layout_margin="@dimen/dimen_30dp"
        app:cardCornerRadius="@dimen/dimen_8dp"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/dimen_16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
            <View
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_marginTop="@dimen/dimen_16dp"
                android:src="@drawable/logopng"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawableStart="@drawable/ic_phone"
                android:text="Telephone"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/colorPrimaryDark"
                android:drawableTint="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="080-79651000"
                style="@style/tvContactUs"/>
          <TextView
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawableStart="@drawable/ic_email"
                android:text="E-mail Address"
              android:textStyle="bold"
              android:textSize="@dimen/dimen_20sp"
              android:textColor="@color/colorPrimaryDark"
              android:drawableTint="@color/colorPrimaryDark"                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="media@janatasuddi.com\ninfo@way2medianetwork.com"
                style="@style/tvContactUs"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawableStart="@drawable/ic_location"
                android:text="Address"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/colorPrimaryDark"
                android:drawableTint="@color/colorPrimaryDark"                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="@string/address"
                style="@style/tvContactUs"/>
 <TextView
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawableStart="@drawable/ic_website"
                android:text="Visit our Website"
     android:textStyle="bold"
     android:textSize="@dimen/dimen_20sp"
     android:textColor="@color/colorPrimaryDark"
     android:drawableTint="@color/colorPrimaryDark"                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="https://www.janatasuddi.com/"
                style="@style/tvContactUs"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawableStart="@drawable/ic_publisher"
                android:text="Published by"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/colorPrimaryDark"
                android:drawableTint="@color/colorPrimaryDark"                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="Janata Suddi | ಜನತಾ ಸುದ್ದಿ\nWay 2 Media Network Private Limited"
                style="@style/tvContactUs"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>