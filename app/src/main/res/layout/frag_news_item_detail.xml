<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_16dp"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:gravity="center_vertical"
    android:id="@+id/rlFragMainItemDetail"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNewsTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/cvImage"
        android:padding="4dp"
        android:text="News Title"
        android:textColor="@color/BLACK"
        android:textSize="12sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/dimen_16dp"
        android:layout_margin="@dimen/dimen_4dp"
        android:layout_width="@dimen/dimen_110dp"
        android:layout_height="@dimen/dimen_80dp"
        app:cardCornerRadius="@dimen/dimen_8dp">
        <ImageView
            android:id="@+id/ivNewsImageDetail"
            android:scaleType="fitXY"
            android:background="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:visibility="gone"
        android:id="@+id/tvNewsDate"
        android:textColor="@color/BLACK"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="@dimen/dimen_4dp"
        android:gravity="center"
       />
</RelativeLayout>
</androidx.cardview.widget.CardView>