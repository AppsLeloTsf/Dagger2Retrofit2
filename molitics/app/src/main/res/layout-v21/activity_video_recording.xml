<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:keepScreenOn="true">


    <com.molitics.molitician.customView.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/timer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_10dp"
        android:background="@drawable/bg_primary"
        android:elevation="@dimen/dim_3dp"
        android:paddingLeft="@dimen/dim_20dp"
        android:paddingTop="@dimen/dim_5dp"
        android:paddingRight="@dimen/dim_20dp"
        android:paddingBottom="@dimen/dim_5dp"
        android:textColor="@color/white" />


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4285f4">


        <ImageButton
            android:id="@+id/cross_video"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:contentDescription="@string/close_video"
            android:padding="20dp"
            android:src="@drawable/cross_white" />

        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/record" />

        <ImageButton
            android:id="@+id/submit_video"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:contentDescription="@string/submit_video"
            android:padding="20dp"
            android:src="@drawable/camera_tick" />
    </FrameLayout>
</RelativeLayout>
