<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <stroke android:width="1dip" android:color="#df7020" />
            <gradient android:angle="-90" android:endColor="#ea1713" android:startColor="#ec3717" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#e65a14" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:endColor="@color/red" android:startColor="@color/red" />
        </shape>
    </item>
</selector>