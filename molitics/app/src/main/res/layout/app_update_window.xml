<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_5dp">

        <TextView
            android:id="@+id/update_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dim_5dp"
            android:textSize="@dimen/mid_text_16" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10dp"
            android:gravity="center">

            <Button
                android:id="@+id/update_button"
                android:layout_width="80dp"
                android:layout_height="@dimen/dim_30dp"
                android:layout_margin="@dimen/dim_5dp"
                android:background="@drawable/expiry_button"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/update_cancel_button"
                android:layout_width="80dp"
                android:layout_height="@dimen/dim_30dp"
                android:layout_margin="@dimen/dim_5dp"
                android:layout_toRightOf="@+id/update_button"
                android:background="@drawable/survey_progress"
                android:text="@string/cancel"
                android:textAllCaps="false" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>