<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="@dimen/dim_10dp"
        android:elevation="@dimen/dim_5dp">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_10dp">

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/article_heading_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/article_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_3dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="3"
                android:textColor="#0b446a"
                android:textSize="16sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/article_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/clock"
                    android:drawablePadding="@dimen/dim_5dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#0b446a"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/read_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="#0b446a"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="@dimen/dim_5dp"
                    android:paddingLeft="@dimen/dim_10dp"
                    android:paddingRight="@dimen/dim_10dp"
                    android:paddingTop="@dimen/dim_5dp"
                    android:text="Read More"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
