    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_5dp"
        android:layout_marginRight="@dimen/dim_5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dim_5dp"
        android:paddingBottom="@dimen/dim_5dp">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/dim_5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/trending_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:civ_border_color="@color/preview_inactive"
                app:civ_border_width="@dimen/dim_2dp" />

            <ImageView
                android:id="@+id/verifiedLeaderView"
                android:layout_alignRight="@+id/trending_image"
                android:layout_marginTop="@dimen/dim_5dp"
                android:src="@drawable/ic_green_tick"
                android:layout_width="@dimen/dim_15dp"
                android:visibility="gone"
                android:layout_height="@dimen/dim_15dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/leader_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/follow_leader"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/leader_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_marginRight="@dimen/dim_5dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/follow_leader"
            android:textSize="10sp"
            android:textStyle="normal"
            android:visibility="gone" />

