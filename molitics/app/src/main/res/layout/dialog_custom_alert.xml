<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dim_5dp">

    <TextView
        android:id="@+id/txv_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/blue_text"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txv_alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_alert_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dim_10dp"
        android:gravity="center"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/btn_positive"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txv_alert_message"
        android:background="@drawable/btn_selector_materialtheme"
        android:text="@android:string/ok"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/btn_negative"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_alert_message"
        android:layout_marginRight="@dimen/dim_10dp"
        android:layout_toLeftOf="@+id/btn_positive"
        android:background="@drawable/btn_selector_materialtheme"
        android:text="@android:string/cancel"
        android:textColor="@color/text_color"
        android:visibility="gone"
        />

</RelativeLayout>