<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/article_bg"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/trending_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_15dp"
        android:layout_marginTop="@dimen/dim_15dp"
        android:drawablePadding="@dimen/dim_5dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:padding="@dimen/dim_5dp"
        android:text="@string/user_suggestion"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />

    <im.ene.toro.widget.Container
        android:id="@+id/hor_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trending_txt"
        android:paddingLeft="@dimen/dim_5dp"
        android:paddingRight="@dimen/dim_5dp"
        android:paddingBottom="@dimen/dim_10dp"
        android:scrollbars="none" />
</RelativeLayout>