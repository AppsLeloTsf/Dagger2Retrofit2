<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_survey_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dim_10dp"
    android:paddingTop="@dimen/dim_10dp"
    android:paddingRight="@dimen/dim_10dp">

    <TextView
        android:id="@+id/survey_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q"
        android:textColor="@color/text_color"
        android:textSize="@dimen/large_text_18" />

    <RelativeLayout
        android:id="@+id/semi_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/survey_q"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim_10dp"
        android:paddingRight="@dimen/dim_10dp">

        <TextView
            android:id="@+id/survey_qua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/mid_text_16" />

        <TextView
            android:id="@+id/area_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/survey_qua"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_toLeftOf="@+id/valid_till"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/mid_text_16" />

        <TextView
            android:id="@+id/valid_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/survey_qua"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dim_10dp"
            android:textColor="@color/button_red"
            android:textSize="@dimen/short_text_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1px"
        android:layout_below="@+id/semi_lay"
        android:layout_marginTop="@dimen/dim_10dp"
        android:background="@color/view" />
</RelativeLayout>