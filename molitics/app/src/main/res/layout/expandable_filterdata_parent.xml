<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/expandable_parent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:drawablePadding="@dimen/dim_10dp"
        android:fontFamily="sans-serif"
        android:paddingBottom="@dimen/dim_15dp"
        android:paddingLeft="@dimen/dim_15dp"
        android:paddingRight="@dimen/dim_15dp"
        android:paddingTop="@dimen/dim_15dp"
        android:text="Large Text"
        android:textColor="@color/follow_txte"
        android:textSize="14sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/arrow_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>